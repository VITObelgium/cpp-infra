{
    "cmake.buildDirectory": "${workspaceRoot}/build/opaq-clang",
    "cmake.configureSettings": {
        "CMAKE_PREFIX_PATH": "${workspaceRoot}/build/local-toolchain-clang",
        "VCPKG_ALLOW_SYSTEM_LIBS": "ON",
        "STATIC_QT": "ON",
        "OPAQ_ENABLE_UI": "ON"
    },
    "cmake.installPrefix": "${workspaceRoot}/build/local-toolchain-clang",
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/build/deps-toolchain-*": true,
        "**/vcpkg/buildtrees": true,
        "**/vcpkg/packages": true
    },
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseEngineFallback": "Disabled"
}