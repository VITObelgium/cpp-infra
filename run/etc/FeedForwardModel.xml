<?xml version="1.0" encoding="utf-8" ?>
<config>
  <!-- specify the networks -->
  <ffnetfile_pattern>
    networks/%pol%/09UT/day%fc_hor%/ffnet_%station%_%pol%_%agg_str%_%model%_09UT-day%fc_hor%.xml
  </ffnetfile_pattern>

  <!-- specify the maximum forecasthorizon, up to day+X -->
  <max_fc_hor>4</max_fc_hor>

  <!-- missing value -->
  <missing_value>-9999</missing_value>

  <!-- morning aggregation time -->
  <mor_agg>9</mor_agg>

  <!-- selected tune configuration to run with -->
  <tune_selection>rmse</tune_selection>

  <!-- list of available tunes, specifying the model input feature tag -->
  <tunelist>
    <tune name="rmse">
      <pollutant name="pm10">
	<station name="YZC001"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC002"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC003"><features>model-1-7CST</features><rtc></rtc></station>
	<station name="YZC004"><features>model-1-7CST</features><rtc></rtc></station>
	<station name="YZC005"><features>model-1-7CST</features><rtc></rtc></station>
	<station name="YZC006"><features>model-3-7CST</features><rtc></rtc></station>
	<station name="YZC007"><features>model-3-7CST</features><rtc></rtc></station>
	<station name="YZC008"><features>model-3-7CST</features><rtc></rtc></station>
	<station name="YZC009"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC010"><features>model-2-7CST</features><rtc></rtc></station>
      </pollutant>
      <pollutant name="no2">
	<station name="YZC001"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC002"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC003"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC004"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC005"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC006"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC007"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC008"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC009"><features>model-2-7CST</features><rtc></rtc></station>
	<station name="YZC010"><features>model-2-7CST</features><rtc></rtc></station>
      </pollutant>
      <!-- and so on... -->
    </tune>
        
  </tunelist>

</config>
