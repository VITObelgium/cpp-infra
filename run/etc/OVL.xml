<?xml version="1.0" encoding="utf-8" ?>
<config>

  <!-- hind cast period in days -->
  <hindcast>20</hindcast>
  
  <!-- the missing value, note that this best matched the ones for the individual models -->
  <missing_value>-9999</missing_value>
  
  <!-- the selected mode, should be defined in a specific tune -->
  <tune_mode>rmse</tune_mode>

  <!-- If we're not running all the models in opaq which are used here in the OVL model,
       we'll need to enable the storing of output of the raw neural network forecast models
       before running the RTC, otherwise the RTC will not find it's raw output in the
       forecastbuffer.

       Set the output_raw to enable/true/yes to enable this behaviour. 
  --> 
  <output_raw>enable</output_raw>

  
  <!-- a list of available tunes -->
  <tunes>
    <tune mode="rmse">
      <pollutant aggr="dayavg" name="pm10">
	<station name="40AB01">
          <model fc_hor="0" rtc_mode="2" rtc_param="8">OVL_model2_9UT</model>
          <model fc_hor="1" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="2" rtc_param="20">OVL_model2_9UT</model>
          <model fc_hor="3" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="4" rtc_mode="2" rtc_param="19">OVL_model1_9UT</model>
        </station>
        <station name="40AB02">
          <model fc_hor="0" rtc_mode="2" rtc_param="5">OVL_model1_9UT</model>
          <model fc_hor="1" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="3" rtc_mode="1" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="4" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
        </station>
	<station name="40AL01">
          <model fc_hor="0" rtc_mode="2" rtc_param="8">OVL_model1_9UT</model>
          <model fc_hor="1" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="1" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="3" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="4" rtc_mode="1" rtc_param="0">OVL_model1_9UT</model>
        </station>
        <station name="40AL02">
          <model fc_hor="0" rtc_mode="2" rtc_param="10">OVL_model1_9UT</model>
          <model fc_hor="1" rtc_mode="0" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="0" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="3" rtc_mode="1" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="4" rtc_mode="0" rtc_param="0">OVL_model1_9UT</model>
        </station>
        <station name="40AL05">
          <model fc_hor="0" rtc_mode="2" rtc_param="5">OVL_model1_9UT</model>
          <model fc_hor="1" rtc_mode="2" rtc_param="18">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="0" rtc_param="0">OVL_model1_9UT</model>
          <model fc_hor="3" rtc_mode="2" rtc_param="20">OVL_model1_9UT</model>
          <model fc_hor="4" rtc_mode="2" rtc_param="15">OVL_model3_9UT</model>
        </station>
        <station name="40GK06">
          <model fc_hor="0" rtc_mode="2" rtc_param="7">OVL_model1_9UT</model>
          <model fc_hor="1" rtc_mode="2" rtc_param="16">OVL_model1_9UT</model>
          <model fc_hor="2" rtc_mode="2" rtc_param="17">OVL_model1_9UT</model>
          <model fc_hor="3" rtc_mode="2" rtc_param="20">OVL_model3_9UT</model>
          <model fc_hor="4" rtc_mode="2" rtc_param="17">OVL_model3_9UT</model>
        </station>
      </pollutant>
    </tune>
  </tunes>
</config>
