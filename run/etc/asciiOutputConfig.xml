<?xml version="1.0" ?>
<config>
  <filename>opaqfc_%pol%_%aggr%_%basetime%.txt</filename>

  <!-- only add these models to the output, specified by comma separated list
       omit the tag or leave empty for the full list of available models
  -->
  <models>OVL</models>

  <!-- a title for the file, preceded by #, leave empty to omit -->
  <title>OPAQ FORECAST</title>
  
  <!-- write a header, will be preceded by #
       allowed tags are :
       %pol%      for the pollutant name
       %aggr%     for the aggregation
       %basetime% for the basetime

       leave empty to omit
  -->
  <header>pollutant: %pol%, aggregation: %aggr%</header>

  <!-- write fieldnames, order is
       BASETIME STATION FCTIME MODEL1 MODEL2 MODEL3 ....
    -->
  <fields>enable</fields>

  <!-- separation character
       use  - "space" for whitespace
            - "tab"   for tab character
            - any other for any other character, such as ,;| etc...
       noly the first character will be taken... 
  -->
  <sepchar>;</sepchar>

  <!-- output of forecast time, either full or horizon
       in case of 'full', the full datetime will be written,
       otherwise an integer indicating the forecat horizon,
       0 for day+0, 1 for day+1 etc... 
  -->
  <fctime>horizon</fctime>
  
</config>
