<?xml version="1.0" ?>
<DetrendedKrigingInterpolator>
  <SpatialCorrelator type="ExpWithShortCorrelator">
    <!-- here we should have some general configuration, the path to the files e.g. but not the parameters themselves -->
  </SpatialCorrelator>

  <!-- we use the same trend model definition as with the ordinary RIO model -->
  <TrendModel type="PolyTrendModel"> 
    <!-- need to change the type to dim argument for dimension of the polynomial -->
    <avgtrend type="poly2" ref_level="70." indic_lo="0.0" indic_hi="1.4" />
    <stdtrend type="poly1" ref_level="15." indic_lo="0.0" indic_hi="100.0" />
  </TrendModel>
  
</DetrendedKrigingInterpolator>
