  <!-- This tag contains input / output options... -->
  <IOOptions>
    <!-- The input mode                       -->
    <!-- 0: legacy integer input format       -->
    <!-- 1: floating point F10.3 input format -->
    <input_mode>0</input_mode>

    
    <!-- ASCII output mode (if requested..) -->
    <!-- 0 : legacy integer 1h outptu, the rest was already floating point, pre RIO 4.0 -->
    <!-- 1 : floating point F10.3 all the way -->
    <ascii_output_mode>1</ascii_output_mode>
  </IOOptions>


  <H5Options>
    <!-- Enable zlib compression for HDF5 output concentrations 
         compression levels can be from 0 to 9, -1 disables the 
         compression filter ! -->
    <Compression>9</Compression>
    <!-- NOT IMPLEMENTED YET...
         By default the RIO results & measurements are written as
         floating points, when scaling is enable we use a scaling and
	 write the concentrations as int16.
	 The scaling mode has the following options : 
	 0 : disable
	 1 : enable
    <Scalingmode>1</Scalingmode> 
         When scaling is enables, this gives the scale factor to translate
         from the stored values to the real values, only used when scaling
         is applied 
    <Scalefactor>0.01</Scalefactor>--> 
  </H5Options>

  
  <Configuration name="v2016" dbase="./data/v2016" drivers="./drivers/v2016"
	         output="./output/v2016" stations="./stations/v2016" param="./param/v2016">
    <!--
	   Configuration v2016 for RIO, during ref task 2016. Updated statistical parameters
	   to the period 2011-2015 (2010-2015 for PM2.5 given the smaller data amounts).
    -->
    <Description>RIO operionational version, configuration v2016</Description>	
    
	<!-- only used by MATLAB version -->
	<Option name="logtrans">false</Option>
	
    <Pollutant name="pm25" desc="Particulate matter with diameter below 2.5 µm"  units="µg/m3" scale="1">
      <DetectionLimit>1</DetectionLimit> <!-- detection limit in internal units -->
      <Kriging mode="global"></Kriging>
      <Stationlist>all</Stationlist>
      <Driver name="clc06d" desc="Corine Land Cover 2006, version d" dim="1">
		<Grid name="4x4" grid_space="4000" />
		<Grid name="1x1" grid_space="1000" />
		<Aggregation name="da">
			<avgtrend type="poly2" ref_level="15" indic_lo="0.0" indic_hi="1.2" />
			<stdtrend type="poly1" ref_level="10" indic_lo="0.0" indic_hi="100.0" />
		</Aggregation>
		<Aggregation name="1h">
			<avgtrend type="poly2" ref_level="15" indic_lo="0.0" indic_hi="1.2" />
			<stdtrend type="poly1" ref_level="10" indic_lo="0.0" indic_hi="100.0" />
		</Aggregation>
      </Driver>			
    </Pollutant>

    <Pollutant name="pm10" desc="Particulate matter with diameter below 10 µm"  units="µg/m3" scale="1">
      <DetectionLimit>1</DetectionLimit> <!-- detection limit in internal units -->
      <Kriging mode="global"></Kriging>
      <Stationlist>all</Stationlist>
      <Driver name="clc06d" desc="Corine Land Cover 2006, version d" dim="1">
        <Grid name="4x4" grid_space="4000" />
        <Grid name="1x1" grid_space="1000" />
        <Aggregation name="da">
          <avgtrend type="poly2" ref_level="15" indic_lo="0.0" indic_hi="1.1" />
          <stdtrend type="poly1" ref_level="15" indic_lo="0.0" indic_hi="100.0" />
        </Aggregation>
        <Aggregation name="1h">
          <avgtrend type="poly2" ref_level="15" indic_lo="0.0" indic_hi="1.1" />
          <stdtrend type="poly1" ref_level="15" indic_lo="0.0" indic_hi="100.0" />
        </Aggregation>
      </Driver>
    </Pollutant>

    <Pollutant name="o3" desc="Ozone" units="µg/m3" scale="1">
      <DetectionLimit>1</DetectionLimit> <!-- detection limit in internal units -->
      <Kriging mode="global"></Kriging>
      <Stationlist>all</Stationlist>
      <AltitudeCorrection slope="0.0253" /> <!-- ug/m3/m -->
      <Driver name="clc06d" desc="Corine Land Cover 2006, version d" dim="1">
	<Grid name="4x4" grid_space="4000" />
	<Grid name="1x1" grid_space="1000" />
	<Aggregation name="da" alt_corr="1">
	  <avgtrend type="poly2" ref_level="50." indic_lo="0.0" indic_hi="1.0" />
	  <stdtrend type="poly1" ref_level="20." indic_lo="0.0" indic_hi="100.0" />
