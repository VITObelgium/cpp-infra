	<Aggregation name="1h" alt_corr="1">
	  <avgtrend type="poly2" ref_level="50." indic_lo="0.0" indic_hi="1.0" />
	  <stdtrend type="poly1" ref_level="20." indic_lo="0.0" indic_hi="100.0" />
	</Aggregation>
	<Aggregation name="m1">
	  <avgtrend type="poly2" ref_level="50." indic_lo="0.0" indic_hi="1.0" />
	  <stdtrend type="poly1" ref_level="20." indic_lo="0.0" indic_hi="100.0" />
	</Aggregation>
	<Aggregation name="m8">
	  <avgtrend type="poly2" ref_level="50." indic_lo="0.0" indic_hi="1.0" />
	  <stdtrend type="poly1" ref_level="20." indic_lo="0.0" indic_hi="100.0" />
	</Aggregation>
      </Driver>
    </Pollutant>

