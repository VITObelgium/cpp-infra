	<!-- This tag contains input / output options... -->
	<IOOptions>
		<!-- The input mode                       -->
		<!-- 0: legacy integer input format       -->
		<!-- 1: floating point F10.3 input format -->
		<input_mode>1</input_mode>

		<!-- ASCII output mode (if requested..) -->
		<!-- 0 : legacy integer 1h outptu, the rest was already floating point, pre RIO 4.0 -->
		<!-- 1 : floating point F10.3 all the way -->
		<ascii_output_mode>1</ascii_output_mode>
	</IOOptions>


	<H5Options>
		<!-- Enable zlib compression for HDF5 output concentrations 
         compression levels can be from 0 to 9, -1 disables the 
         compression filter ! -->
		<Compression>9</Compression>
		<!-- NOT IMPLEMENTED YET...
         By default the RIO results & measurements are written as
         floating points, when scaling is enable we use a scaling and
		write the concentrations as int16.
		The scaling mode has the following options : 
		0 : disable
		1 : enable
		<Scalingmode>1</Scalingmode> 
         When scaling is enables, this gives the scale factor to translate
         from the stored values to the real values, only used when scaling
         is applied 
		<Scalefactor>0.01</Scalefactor>--> 
	</H5Options>

	
	<Configuration name="v2010" dbase="./data/v2010" drivers="./drivers/v2010" 
				   output="./output/v2010" stations="./stations/v2010" param="./param/v2010">    
		<Description>RIO operionational version, configuration v2010</Description>	
		<!--
			Configuration v2010 for RIO.
		-->
		<Pollutant name="pm10" desc="Particulate matter with diameter below 10 µm"  units="µg/m3" scale="1">
			<DetectionLimit>1</DetectionLimit> <!-- detection limit in internal units -->
			<Kriging mode="global"></Kriging>
			<Stationlist>all</Stationlist>
			<Driver name="CorineID" desc="Corine Land Cover 2000" dim="1">
				<Grid name="4x4" grid_space="4000" />
				<Aggregation name="da">
					<avgtrend type="poly2" ref_level="70" indic_lo="0.0" indic_hi="1.0" />
					<stdtrend type="poly1" ref_level="20" indic_lo="0.0" indic_hi="100.0" />
				</Aggregation>
				<Aggregation name="1h">
					<avgtrend type="poly2" ref_level="70" indic_lo="0.0" indic_hi="1.0" />
					<stdtrend type="poly1" ref_level="20" indic_lo="0.0" indic_hi="100.0" />
				</Aggregation>
			</Driver>
		</Pollutant>

		<Pollutant name="no2" desc="Nitrogen dioxide" units="µg/m3" scale="1">
			<DetectionLimit>1</DetectionLimit> <!-- detection limit in internal units -->
			<Kriging mode="global"></Kriging>
			<Stationlist>all</Stationlist>     
			<Driver name="CorineID" desc="Corine Land Cover 2000" dim="1">
				<Grid name="4x4" grid_space="4000" />	
				<Aggregation name="da" alt_corr="0">
					<avgtrend type="poly2" ref_level="85." indic_lo="0.0" indic_hi="1.0" />
					<stdtrend type="poly1" ref_level="15." indic_lo="0.0" indic_hi="100.0" />
				</Aggregation>
				<Aggregation name="1h" alt_corr="0">
					<avgtrend type="poly2" ref_level="85." indic_lo="0.0" indic_hi="1.0" />
					<stdtrend type="poly1" ref_level="15." indic_lo="0.0" indic_hi="100.0" />
				</Aggregation>
			</Driver>
		</Pollutant>

