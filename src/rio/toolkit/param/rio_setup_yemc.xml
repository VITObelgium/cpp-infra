<RIO>	
	<!-- Define the spatial drivers, attributes are a name, description, the dimension of the 
		 spatial driver (e.g. 1D: simple beta parameter, 2D : beta parameter and AOD), i.e. number
		 of proxy variables -->

	<!-- YEMC deployment version 2 -->
	<Configuration name="yemc" dbase="./data/yemc" drivers="./drivers/yemc"
	               output="./output/yemc" stations="./stations/yemc" param="./param/yemc">
		<Description>Yangzhou environmental monitoring centre configuration</Description>	
		
		<Pollutant name="pm10" desc="PM10" units="µg/m3" scale="1">	
			<Stationlist>all</Stationlist>
			<DetectionLimit>1</DetectionLimit> 
            <Driver name="P1" dim="1">
			   <Aggregation name="da">
				 <avgtrend type="poly2" ref_level="150" indic_lo="0.0" indic_hi="1.35" />
				 <stdtrend type="poly1" ref_level="15" indic_lo="0.0" indic_hi="1.35" />
			   </Aggregation>
			</Driver>
			 <Driver name="logpop" dim="1">
			    <Aggregation name="da">
				  <avgtrend type="poly2" ref_level="100" indic_lo="0.0" indic_hi="1.3" />
				  <stdtrend type="poly1" ref_level="50" indic_lo="0.0" indic_hi="1.3" />
